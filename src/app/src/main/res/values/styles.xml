<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/colorDecline</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="StaffAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/colorPrimaryStaff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>


    <style name="AdminAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLeft</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="LoginAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="materialThemeOverlay">@color/colorDecline</item>
        <item name="android:textAppearance">@color/colorDecline</item>
        <item name="shapeAppearance">@color/colorDecline</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="materialThemeOverlay">@color/colorAccept</item>
        <item name="android:textAppearance">@color/colorInput</item>
        <item name="shapeAppearance">@color/colorAccept</item>
    </style>
</resources>