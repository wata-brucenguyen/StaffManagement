<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="@color/colorRight"
                android:startColor="@color/colorLeft"
                android:type="linear"
                android:angle="315"/>
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:endColor="@color/colorLeft"
                android:startColor="@color/colorRight"
                android:type="linear"
                android:angle="315"/>
            <corners android:radius="50dp" />
        </shape>
    </item>

</selector>